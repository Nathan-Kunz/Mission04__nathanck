@{

    ViewData["Title"] = "Form";

}
@model FormModel
<br />
<br />
<br />
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="post-preview">

                <h2 class="post-title">Grade Calculator</h2>

                <form method="post">
                    <label>Assignments</label>
                    <br />
                    <input type="number" id="assignments" asp--for="assignment" name="assignments">
                    <br />
                    <label>Group Project</label>
                    <br />
                    <input type="number" asp--for="group" id="GroupPro" name="GroupPro">
                    <br />
                    <label>Quizzes</label>
                    <br />
                    <input type="number" id="quiz" asp--for="quiz" name="quiz">
                    <br />
                    <label>Midterm Exam</label>
                    <br />
                    <input type="number" id="midterm" asp--for="midterm" name="midterm">
                    <br />
                    <label>Final Exam</label>
                    <br />
                    <input type="number" id="final" asp--for="final" name="final">
                    <br />
                    <label>Intex</label>
                    <br />
                    <input type="number" id="intex" asp--for="intex" name="intex">
                    <br />
                    <label>Calculated score:</label>
                    <p id="score"></p>
                    <br />
                    <input id="calc" type="submit" value="Caluculate Grade" />
                </form>

            </div>
        </div>
    </div>
</div>

<div asp-validation-summary="All"></div>
